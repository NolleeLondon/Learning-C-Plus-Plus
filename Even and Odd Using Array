#include <iostream>
using namespace std;
int main() {
    int SIZE = 6;
    int nums[6];
    int even = 0;
    int odd = 0;
    int userNum = 0;
    
    cout << "Enter 6 numbers to input into your array: " << endl;
    for(int i= 0; i < SIZE; i++){
        cin >> nums[i];
    }
    
    for(int i = 0; i < SIZE; i++){
        if(nums[i] % 2 == 0){
        even = nums[i];
        cout << "even number: ";
        cout << even << endl;
        }else if(nums[i] % 2 == 1){
            odd = nums[i];
            cout << "odd number: ";
            cout << odd << endl;
        }
    }
}
